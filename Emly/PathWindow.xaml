<Window x:Class="Emly.PathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emly"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
		WindowStartupLocation="CenterOwner"
		WindowStyle="ToolWindow"
        Title="Set Path" Height="100" Width="320">
	<Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" Height="Auto">
		<Grid HorizontalAlignment="Stretch" Width="Auto">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="95" />
			</Grid.ColumnDefinitions>
			<TextBox HorizontalAlignment="Stretch" Height="23" Margin="5,5,0,5" TextWrapping="NoWrap" VerticalAlignment="Top" Width="Auto" Name="PathInput" />
			<Button Content="Browse" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,5,5" VerticalAlignment="Top" Width="75" Height="23" Click="DialogBrowse_Click" />
		</Grid>
		<Button Content="Save" HorizontalAlignment="Right" Margin="5,5,5,5" VerticalAlignment="Bottom" Width="75" Height="24" Click="DialogOk_Click" />
	</Grid>
</Window>
